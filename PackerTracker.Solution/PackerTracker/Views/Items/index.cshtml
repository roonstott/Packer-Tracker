<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Packer Tracker</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
  </head>
  <body class="container">
    <nav class="navbar">
      <a href="/">Home</a>
      <a href="/items">Show item list</a>
      <a href="/items/new">Add new items</a>
    </nav>
    @using PackerTracker.Models;

    <div class="row">
      <div class="col-4">
        <h1>All Items List</h1>
        @if (Model[0].Count == 0)
        {
          <p>No items in the list.</p>
        }
        <ul>
          @foreach (Item item in Model[0])
          {
            <li><a href="/items/@item.Id">@item.Name</a>
              <form action="items/addToShoppingList" method="post">
                <button value="@item.Id" name="id" type="submit">Shopping</button>
              </form>
              <form action="items/addToPackedList" method="post">
                <button value="@item.Id" name="id" type="submit">Packed</button>
              </form>
            </li>
          }
        </ul>
      </div>
      <div class="col-4">
        <h1>Shopping List</h1>
        <ul>
          @foreach (Item item in Model[1])
          {
            <li><a href="/items/@item.Id">@item.Name</a>
              <form action="/items/@item.Id" method="post">
                <button type="submit">Packed</button>
              </form>
              <form action="@item.AddToPackedList()" method="post">
                <button type="submit">Add To Shopping List</button>
              </form>
            </li>
          }
        </ul>
      </div>
      <div class="col-4">
        <h1>Packed List</h1>
        @if (Model[2].Count == 0)
        {
          <p>No items in the list.</p>
        }
        <ul>
          @foreach (Item item in Model[2])
          {
            <li><a href="/items/@item.Id">@item.Name</a>
              <form action="/items/@item.Id" method="post">
                <button type="submit">Packed</button>
              </form>
              <form action="items/addToPackedList" method="post">
                <button value="@item.Id" type="submit">Add To Shopping List</button>
              </form>
            </li>
          }
        </ul>
      </div>
    </div>

  </body>
</html>
